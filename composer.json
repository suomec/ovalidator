{
  "name": "suomec/ovalidator",
  "description": "Objects validator and properties mapper for PHP",
  "type": "library",
  "license": "MIT",
  "config": {
    "vendor-dir": "var/vendor"
  },
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "psr/http-message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "OValidator\\": "src",
      "OValidator\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.9",
    "phpunit/phpunit": "^9.5"
  }
}
